@model USP_Application.ViewModels.AreaFormViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Area.Name)
    @Html.TextBoxFor(m => m.Area.Name, new { @class = "form-control", @placeholder = "Enter new area name here" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Area.CityId)
    @Html.DropDownListFor(m => m.Area.CityId, new SelectList(Model.Cities, "Id", "Name"), "Select city",
                                                new { @class = "form-control", id = "City" })
    @Html.ValidationMessageFor(m => m.Area.CityId, "", new { @class = "text-danger" })
</div>

@Html.HiddenFor(m => m.Area.Id)
<p style="min-height:5px;"></p>

